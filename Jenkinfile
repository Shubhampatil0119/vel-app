pipeline {
	label {
	    label "built-in"
		customworkspace "/data/pipeline"
	}
	 
    stages {
	        stage ('install-apache') {
			         steps {
		                        sh "yum install httpd -y"			 
					 }
			
			}
			
			stage ('deploy-index') {
			         steps {
		                        sh "cp -r index.html /war/www/html"
                                sh "chmod -R 777 /wae/www/html/index.html"								
					 }
			
			}
			
			stage ('restart-apache') {
			         steps {
		                        sh "service httpd restart"			 
					 }
			
			}
	}	

}
